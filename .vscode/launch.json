{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Backend Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/server.js",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "restart": true,
      "runtimeArgs": [
        "--nolazy"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}